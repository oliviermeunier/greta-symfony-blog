<a href="{{ path('admin.post.new') }}" class="btn btn-primary my-3">
    <i class="fas fa-plus-square"></i> Rédiger un article
</a>

<table class="table table-hover table-sm posts-list">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Création</th>
        <th scope="col">Titre</th>
        <th scope="col">Image</th>
        <th scope="col">Auteur</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.createdAt|date('d/m/Y H:i', 'Europe/Paris') }}</td>
            <td>{{ post.title|slice(0,160) }}</td>
            <td>
                <figure>
                    <img src="{{ asset(post_image_dir ~ '/' ~ post.image) }}" alt="">
                </figure></td>
            <td>{{ post.user.fullname }}</td>
            <td>
                <a href="#" class="post-edit mr-3"><i class="fas fa-edit"></i></a>
                <a href="#" class="post-remove"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>